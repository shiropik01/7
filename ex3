coffee = 120
tea = 80
juice = 100
water = 50
lemonade = 90

print("üçµ –ú–ï–ù–Æ –ö–ê–§–ï ‚òï")
    
print("1) –ö–æ—Ñ–µ - 120 —Ä—É–±. ‚òï")
print("2) –ß–∞–π - 80 —Ä—É–±. üçµ")
print("3) –°–æ–∫ - 100 —Ä—É–±. üßÉ")
print("4) –í–æ–¥–∞ - 50 —Ä—É–±. üíß")
print("5) –õ–∏–º–æ–Ω–∞–¥ - 90 —Ä—É–±. üçã")

drink_input = input("–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä –Ω–∞–ø–∏—Ç–∫–∞: ")
quantity = int(input("–í–≤–µ–¥–∏—Ç–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø–æ—Ä—Ü–∏–π: "))

match drink_input:
    case "1":
        drink_name = "–ö–æ—Ñ–µ"
        price = coffee
        emoji = "‚òï"
    case "2":
        drink_name = "–ß–∞–π"
        price = tea
        emoji = "üçµ"
    case "3":
        drink_name = "–°–æ–∫"
        price = juice
        emoji = "üßÉ"
    case "4":
        drink_name = "–í–æ–¥–∞"
        price = water
        emoji = "üíß"
    case "5":
        drink_name = "–õ–∏–º–æ–Ω–∞–¥"
        price = lemonade
        emoji = "üçã"
    case _:
        print("‚ùå–û—à–∏–±–∫–∞: –Ω–∞–ø–∏—Ç–æ–∫ –Ω–µ –Ω–∞–π–¥–µ–Ω‚ùå")
        exit()

match quantity:
    case 1:
        portion_word = "–ø–æ—Ä—Ü–∏—è"
    case 2 | 3 | 4:
        portion_word = "–ø–æ—Ä—Ü–∏–∏"
    case _:
        portion_word = "–ø–æ—Ä—Ü–∏–π"

total = price * quantity

print("=" * 30)
print("üìÉ –ö–≤–∏—Ç–∞–Ω—Ü–∏—è –∫–∞—Ñ–µ üìÉ")
print("=" * 30)
print(f"–¢–æ–≤–∞—Ä: {drink_name} {emoji}")
print(f"–¶–µ–Ω–∞ –∑–∞ –ø–æ—Ä—Ü–∏—é: {price} —Ä—É–±")
print(f"–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ: {quantity} {portion_word}")
print(f"–°—É–º–º–∞: {total} —Ä—É–±")
print("=" * 30)
print(f"–ö –û–ü–õ–ê–¢–ï: {total} —Ä—É–±")
print("=" * 30)
